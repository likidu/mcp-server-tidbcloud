{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "cd ../.. && pnpm install && pnpm build",
  "framework": null,
  "headers": [
    {
      "source": "/:path*",
      "headers": [
        {
          "key": "x-original-path",
          "value": "/:path*"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/mcp/:path*",
      "destination": "/api/mcp"
    },
    {
      "source": "/mcp",
      "destination": "/api/mcp"
    },
    {
      "source": "/(.*)",
      "destination": "/api"
    }
  ]
}
