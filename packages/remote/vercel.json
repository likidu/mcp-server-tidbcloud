{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "cd ../.. && pnpm install && pnpm build",
  "framework": null,
  "rewrites": [
    {
      "source": "/mcp/:path*",
      "destination": "/api/mcp"
    },
    {
      "source": "/mcp",
      "destination": "/api/mcp"
    },
    {
      "source": "/register",
      "destination": "/api/register"
    },
    {
      "source": "/authorize",
      "destination": "/api/authorize"
    },
    {
      "source": "/token",
      "destination": "/api/token"
    },
    {
      "source": "/callback",
      "destination": "/api/callback"
    },
    {
      "source": "/oauth/callback",
      "destination": "/api/oauth/callback"
    },
    {
      "source": "/(.*)",
      "destination": "/api"
    }
  ]
}
